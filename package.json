{
  "name": "muse",
  "version": "1.0.0",
  "description": "Framework to help you build complex canvas applications",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}'",
    "prettier": "prettier --single-quote --print-width 120 --parser typescript --write \"./src/**/*.ts\"",
    "jest": "jest --findRelatedTests",
    "test": "npm run prettier && npm run lint && npm run jest",
    "clean": "rm -rf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc -p ./tsconfig.build.json",
    "postbuild": "prettier --loglevel=silent --write \"./src/**/*.ts\"",
    "release": "echo \"have no script yet...\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ymssx/muse.git"
  },
  "keywords": [
    "canvas"
  ],
  "author": "ymssx",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ymssx/muse/issues"
  },
  "homepage": "https://github.com/ymssx/muse#readme",
  "devDependencies": {},
  "dependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "mobx": "^6.0.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": ["npm run prettier", "npm run lint", "npm run jest"]
  }
}
